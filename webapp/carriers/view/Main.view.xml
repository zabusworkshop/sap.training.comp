<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="sap.training.comp.carriers.controller.Main"
	xmlns:html="http://www.w3.org/1999/xhtml">
	
	<Table
		items="{/ZBC_C_Carrier_TP}"
		mode="SingleSelectMaster"
		selectionChange="onAirlineSelected">
		<columns>
			<Column>
				<Text text="{i18n>columnId}"/>
			</Column>
			<Column>
				<Text text="{i18n>columnCarrname}"/>
			</Column>
			<Column>
				<Text text="{i18n>columnCurrency}"/>
			</Column>
			<Column>
				<Text text="{i18n>columnUrl}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{Carrid}"/>
					<Text text="{Carrname}"/>
					<Text text="{Currcode}"/>
					<Text text="{Url}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
	
</mvc:View>